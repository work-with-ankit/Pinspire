<div class="w-full min-h-screen  bg-zinc-800 px-10 py-7 text text-white">
    <h1 class="text-xl">Create a new post</h1>
    <hr class="opacity-10 mt-4">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class=" block w-1/3  px-3 py-2 border-bottom-2px" type="file" name="postimage">
        <input class=" text-white block w-1/3  px-3 py-2 border-2 rounded-md mt-3" type="text" placeholder="Title" 
         name="title">
        <textarea class=" text-white block w-1/3  px-3 py-2 border-2 rounded-md mt-3 "  type="text" placeholder="Description" name="description" ></textarea>
        <input class=" block w-1/3  px-3 py-2  rounded-md mt-3 bg-red-600 hover:bg-red-800" type="submit" value="submit post">
     </form>
</div>
